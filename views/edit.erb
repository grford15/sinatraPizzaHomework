<form method="post" action="/pizza_orders/edit/<%=@order.id%>">

  <label for="first_name">First Name:</label>
  <input id="first_name" type="text" name="first_name" value="<%= @order.first_name %>"/>

  <label for="last_name">Last Name:</label>
  <input id="last_name" type="text" name="last_name" value="<%= @order.last_name %>"/>

  <label for="pizza_select">Select Pizza:</label>
  <select id="pizza_select" name="topping">
    <option value="Margerita">Margerita</option>
    <option value="Calzone">Calzone</option>
  </select>

  <label for="Quantity">Quantity:</label>
  <input id="quantity" type="number" name="quantity" value="<%= @order.quantity %>"/>

  <input type="submit" value="Update Pizza"/>

</form>
